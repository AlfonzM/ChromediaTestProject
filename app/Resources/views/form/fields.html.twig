<!-- form -->
{% block form %}
    {{ form_start(form, {'attr':{'class':'form-inline'}} ) }}
    {{ form_widget(form) }}
    {{ form_end(form) }}
{% endblock form %}

<!-- form row -->
{% block form_row %}
    <p><div class="form-group">
        {{ form_label(form, '',{'label_attr':{'class':'control-label'}}) }}<br>
        {{ form_widget(form, {'attr':{'class':'form-control'}}) }}{{ form_errors(form) }}<br>
    </div></p>
{% endblock form_row %}

<!-- errors -->
{% block form_errors %}
    {% spaceless %}
        {% if errors|length > 0 %}
            {% for error in errors %}
                <span class="label label-danger">{{ error.message }}</span>
            {% endfor %}
        {% endif %}
    {% endspaceless %}
{% endblock form_errors %}

<!-- form widget -->
{% block form_widget_simple %}
    {% set type = type|default('text') %}
    <input class="form-control" type="{{ type }}" {{ block('widget_attributes') }} {% if value is not empty %}value="{{ value }}" {% endif %}/>
{% endblock form_widget_simple %}

<!-- button row -->
{% block button_row %}
    {% spaceless %}
        <div>
            {{ form_widget(form, {'attr':{'class':'btn btn-primary'}}) }}
        </div>
    {% endspaceless %}
{% endblock button_row %}